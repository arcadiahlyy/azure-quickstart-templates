{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "numDataDisks": {
            "type": "int",
            "minValue": 0,
            "maxValue": 16,
            "metadata": {
                "description": "Number of data disks"
            }
        },
        "diskSizeGb": {
            "type": "int",
            "minValue": 1,
            "maxValue": 1023,
            "metadata": {
                "description": "Size of the data disks"
            }
        },
        "diskCaching": {
            "type": "string",
            "allowedValues": [
                "None",
                "ReadOnly",
                "ReadWrite"
            ],
            "defaultValue": "None",
            "metadata": {
                "description": "Caching type for the data disks"
            }
        },
        "storageAccountName": {
            "type": "string",
            "metadata": {
                "description": "Name of the storage account where the data disks are stored"
            }
        },
        "containerName": {
            "type": "string",
            "metadata": {
                "description": "Name of container in the storage account"
            }
        },

        "diskNamingPrefix": {
            "type": "string",
            "metadata": {
                "description": "An optional unique naming prefix for disk names"
            }
        }
    },

    "variables": {

        "diskArray": [
            {
                "name": "[concat(parameters('diskNamingPrefix'), 'disk0')]",
                "diskSizeGB": "[parameters('diskSizeGb')]",
                "lun": 0,
                "vhd": {
                    "Uri": "[concat('http://',parameters('storageAccountName'),'.blob.core.windows.net/',parameters('containerName'),'/',parameters('diskNamingPrefix'),'disk0.vhd')]"
                },
                "caching": "[parameters('diskCaching')]",
                "createOption": "Empty"
            },
            {
                "name": "[concat(parameters('diskNamingPrefix'), 'disk1')]",
                "diskSizeGB": "[parameters('diskSizeGb')]",
